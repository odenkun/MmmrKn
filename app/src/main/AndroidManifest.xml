<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.mmmrkn">

    <!-- インターネットにアクセスするための権限 -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:name=".presentation.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:screenOrientation="landscape"
            android:name=".presentation.login.LoginActivity"
            android:label="@string/title_activity_login" />

        <activity
            android:screenOrientation="landscape"
            android:name=".presentation.BeginActivity"
            android:theme="@android:style/Theme.NoDisplay">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".presentation.teacher.SelectTeacherActivity"
            android:screenOrientation="landscape" />

        <activity
            android:screenOrientation="landscape"
            android:name=".presentation.studentprofile.StudentProfileActivity" />

        <activity
            android:name=".presentation.mode_select.ModeActivity"
            android:screenOrientation="landscape" />

        <activity
            android:name=".presentation.attendances_list.AttendancesListActivity"
            android:screenOrientation="landscape" />

        <activity
            android:name=".presentation.attendances.AttendancesActivity"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="adjustPan|stateHidden"/>

        <activity
            android:name=".presentation.gohome.GoHomeActivity"
            android:screenOrientation="landscape" />

    </application>

</manifest>