<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context="com.example.android.mmmrkn.presentation.gohome.GoHomeFragment">

    <data>
        <variable
            name="fragment"
            type="com.example.android.mmmrkn.presentation.gohome.GoHomeFragment" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/attend_outer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RadioGroup
            android:id="@+id/grp_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:orientation="horizontal"
            app:checkedButtonFromCondition="@{fragment.student.attendance.condition}"
            app:goodButton="@{@id/radio_healthy}"
            app:badButton="@{@id/radio_unhealthy}"

            app:layout_constraintStart_toStartOf="@+id/scrollView"
            app:layout_constraintTop_toBottomOf="@+id/scrollView">

            <RadioButton
                android:id="@+id/radio_healthy"
                style="@style/GoodButton"
                android:layout_width="47dp"
                android:layout_height="50dp"
                android:checked="true" />

            <RadioButton
                android:id="@+id/radio_unhealthy"
                style="@style/BadButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="40dp"
                android:checked="false" />

        </RadioGroup>

        <TextView
            android:id="@+id/text_memo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="一言メモ"
            android:textColor="@color/colorBlack"
            android:textSize="20sp"
            android:visibility="@{fragment.student == null ? android.view.View.INVISIBLE : android.view.View.VISIBLE}"
            app:layout_constraintStart_toStartOf="@+id/img_person"
            app:layout_constraintTop_toBottomOf="@+id/img_person"/>

        <!--クラス名-->
        <TextView
            android:id="@+id/txt_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:textColor="@color/colorBlack"
            android:textSize="18sp"
            android:visibility="@{fragment.student == null ? android.view.View.INVISIBLE : android.view.View.VISIBLE}"
            app:layout_constraintStart_toEndOf="@+id/img_person"
            app:layout_constraintTop_toTopOf="parent"/>

        <!--生徒名-->
        <TextView
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="52dp"
            android:text="@{fragment.student.name}"
            android:textColor="@color/colorBlack"
            android:textSize="18sp"
            android:visibility="@{fragment.student == null ? android.view.View.INVISIBLE : android.view.View.VISIBLE}"
            app:layout_constraintStart_toEndOf="@+id/img_person"
            app:layout_constraintTop_toTopOf="parent"/>

        <!--生徒の写真-->
        <ImageView
            android:id="@+id/img_person"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:visibility="@{fragment.student == null ? android.view.View.INVISIBLE : android.view.View.VISIBLE}"
            app:gender="@{fragment.student.gender}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:picturePath="@{fragment.student.studentId}"
            app:srcCompat="@color/colorPrimary"/>

        <Button
            android:id="@+id/btn_attend"
            android:layout_width="80dp"
            android:layout_height="36dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/button_sub_layout"
            android:enabled="@{fragment.student != null}"
            android:onClick="@{fragment.onDropBtnClick}"
            android:text="降園"
            android:textColor="@color/colorWhite"
            android:textSize="15sp"
            android:visibility="@{fragment.student == null ? android.view.View.INVISIBLE : android.view.View.VISIBLE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!--音声入力する内容-->
        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/scrool_border"
            android:paddingBottom="3dp"
            android:paddingLeft="3dp"
            android:paddingTop="3dp"
            android:visibility="@{fragment.student == null ? android.view.View.INVISIBLE : android.view.View.VISIBLE}"
            app:layout_constraintStart_toStartOf="@+id/text_memo"
            app:layout_constraintTop_toBottomOf="@+id/text_memo">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{fragment.student.attendance.detail}"
                android:textSize="16sp"
                tools:layout_editor_absoluteX="179dp"
                tools:layout_editor_absoluteY="125dp"/>
        </ScrollView>

        <TextView
            android:id="@+id/txt_caution"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QRを読み込んでください"
            android:textColor="@color/colorBlack"
            android:textSize="20sp"
            android:visibility="@{fragment.student != null ? android.view.View.INVISIBLE : android.view.View.VISIBLE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    </android.support.constraint.ConstraintLayout>
</layout>