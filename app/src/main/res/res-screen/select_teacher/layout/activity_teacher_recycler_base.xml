<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_color">

    <ImageView
        android:id="@+id/image_teacher_icon"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="210dp"
        android:layout_weight="0"
        app:srcCompat="@drawable/ic_user" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="335dp"
        android:layout_weight="0"
        android:text="教員確認"
        android:textColor="#FFFFFF"
        android:textSize="32sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="140dp"
        android:layout_marginRight="170dp"
        android:layout_marginTop="140dp"
        android:layout_weight="2">


        <com.example.android.mmmrkn.presentation.teacher.TeacherCardRecyclerView
            android:id="@+id/teacher_recycle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"></com.example.android.mmmrkn.presentation.teacher.TeacherCardRecyclerView>
    </LinearLayout>

</LinearLayout>
