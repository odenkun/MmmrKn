<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/attendlist_linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E6E6E6"
        android:orientation="vertical">


        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:paddingBottom="15dp"
            android:paddingTop="5dp" />

        <com.example.android.mmmrkn.presentation.attendances_list.students.AttendancesListCardRecyclerView
            android:id="@+id/recycler_attendances"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <TextView
        android:id="@+id/attendlist_coution"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="260dp"
        android:text="登園児童は0人です"
        android:textColor="@color/colorBlack"
        android:textSize="47sp"
        android:translationZ="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/sad_baby"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="25dp"
        android:translationZ="500dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/attendlist_coution"
        app:srcCompat="@drawable/ic_sad_baby" />
</android.support.constraint.ConstraintLayout>