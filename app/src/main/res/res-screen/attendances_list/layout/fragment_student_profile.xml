<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.android.mmmrkn.presentation.attendances_list.StudentProfileFragment">

    <data>

        <variable
            name="viewmodel"
            type="com.example.android.mmmrkn.presentation.attendances_list.StudentProfileFragment.ViewModel" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:background="@drawable/fragment_line"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txt_detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="112dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="体調："
            android:textColor="@color/colorBlack"
            android:textSize="45sp"
            app:layout_constraintStart_toEndOf="@+id/image_picture"
            app:layout_constraintTop_toBottomOf="@+id/text_time" />

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="811dp"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/scrool_border"
            android:paddingBottom="3dp"
            android:paddingLeft="3dp"
            android:paddingTop="3dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/grp_state"
            app:layout_constraintVertical_bias="1.0">

            <TextView
                android:id="@+id/text_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="@{viewmodel.selectedStudent.attendance.detail}"
                android:textColor="@color/colorBlack"
                android:textSize="20sp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_memo" />
        </ScrollView>

        <RadioGroup
            android:id="@+id/grp_state"
            android:layout_width="wrap_content"
            android:layout_height="94dp"
            android:layout_marginStart="632dp"
            android:layout_marginTop="4dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_timer">

            <RadioButton
                android:id="@+id/radio_healthy"
                style="@style/GoodButton"
                android:layout_width="80dp"
                android:enabled="false"
                android:layout_height="80dp"
                android:checked="true" />

            <RadioButton
                android:id="@+id/radio_unhealthy"
                style="@style/BadButton"
                android:layout_width="80dp"
                android:enabled="false"
                android:layout_height="80dp"
                android:layout_marginLeft="24dp"
                android:checked="false" />

        </RadioGroup>

        <ImageView
            android:id="@+id/image_picture"
            android:layout_width="340dp"
            android:layout_height="340dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:color/black" />

        <TextView
            android:id="@+id/text_party"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="28dp"
            android:gravity="center"
            android:text="さくら組"
            android:textColor="@color/colorBlack"
            android:textSize="55sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toEndOf="@+id/image_picture"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:text="@{viewmodel.selectedStudent.name}"
            android:textColor="@color/colorBlack"
            android:textSize="85sp"
            app:layout_constraintStart_toEndOf="@+id/image_picture"
            app:layout_constraintTop_toBottomOf="@+id/text_party" />

        <TextView
            android:id="@+id/text_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="36dp"
            android:gravity="center"
            android:text="登園時間："
            android:textColor="@color/colorBlack"
            android:textSize="45sp"
            app:layout_constraintStart_toEndOf="@+id/image_picture"
            app:layout_constraintTop_toBottomOf="@+id/text_name" />

        <TextView
            android:id="@+id/text_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:text="@{viewmodel.selectedStudent.attendance.time}"
            android:textColor="@color/colorBlack"
            android:textSize="46sp"
            app:layout_constraintStart_toEndOf="@+id/text_time"
            app:layout_constraintTop_toBottomOf="@+id/text_name" />

        <TextView
            android:id="@+id/text_memo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="28dp"
            android:gravity="center"
            android:text="一言メモ"
            android:textColor="@color/colorBlack"
            android:textSize="45sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_picture" />

    </android.support.constraint.ConstraintLayout>
</layout>