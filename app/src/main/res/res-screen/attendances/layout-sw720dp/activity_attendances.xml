<?xml version="1.0" encoding="utf-8"?>
    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="688dp"
            android:layout_height="237dp"
            android:layout_marginEnd="28dp"
            android:background="@drawable/scrool_border"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_memo">

            <EditText
                android:imeOptions="actionDone|flagNoFullscreen"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:text="あああああああああああああああああああああああああああああああああああああああああああああああああああああああああああああああああああああああああああああああああああああああああああああああああああああああああああああああああああああああああああああああああああああああああああああああああああああああああああああああああああああああああああああああああああああああああああああああああああああああああああああああああああああああああああああああああああああああああああああああああああいいい"
                android:textSize="28sp" />
        </ScrollView>

    <TextView
            android:id="@+id/text_memo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="248dp"
            android:layout_marginStart="8dp"
            android:text="一言メモ"
            android:textColor="@color/colorBlack"
            android:textSize="35sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.017"
            app:layout_constraintStart_toEndOf="@+id/img_person"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="168dp" />

    <TextView
        android:id="@+id/txt_class"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="72dp"
        android:text="さくら組"
        android:textColor="@color/colorBlack"
        android:textSize="40sp"
        app:layout_constraintEnd_toStartOf="@+id/txt_name"
        app:layout_constraintHorizontal_bias="0.071"
        app:layout_constraintStart_toEndOf="@+id/img_person"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="120dp"
        android:layout_marginTop="72dp"
        android:text="登園太郎"
        android:textColor="@color/colorBlack"
        android:textSize="80sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_person"
        android:layout_width="520dp"
        android:layout_height="520dp"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.496"
        app:srcCompat="@color/colorPrimary" />

        <Button
            android:id="@+id/btn_attend"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="登園"
            android:textColor="@color/colorBlack"
            android:textSize="32sp"
            app:layout_constraintHorizontal_bias="0.975"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/scrollView" />

        <Button
            android:id="@+id/btn_denial"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:layout_marginRight="28dp"
            android:text="拒否"
            android:textColor="@color/colorBlack"
            android:textSize="32sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_attend"
            app:layout_constraintVertical_bias="0.045" />

    <RadioGroup
        android:id="@+id/grp_state"
        android:layout_width="547dp"
        android:layout_height="110dp"
        android:layout_marginEnd="256dp"
        android:layout_marginTop="28dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView">

        <RadioButton
            android:id="@+id/radio_healthy"
            style="@style/GoodButton"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginLeft="180dp"
            android:layout_marginRight="180dp"
            android:layout_weight="1"
            android:checked="true"
            android:textColor="#328"
            android:textSize="45sp"
            app:layout_constraintLeft_toRightOf="@+id/radio_unhealthy"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/plain_content" />

        <RadioButton
            android:id="@+id/radio_unhealthy"
            style="@style/BadButton"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:checked="false"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="45sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/plain_content" />

    </RadioGroup>
</android.support.constraint.ConstraintLayout>
