<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
             tools:context="com.example.android.mmmrkn.presentation.attendances.AttendFragment">
    <data>
        <variable name="holder" type="com.example.android.mmmrkn.infra.entity.Student.Holder" />
    </data>
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/attend_outer"
        >

        <TextView
            android:id="@+id/txt_party"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:text="@{holder.student.party.name}"
            android:textColor="@color/colorBlack"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{holder.student.name}"
            android:textColor="@color/colorBlack"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="@+id/txt_party"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_party"
            />

        <ImageView
            android:id="@+id/img_person"
            android:layout_width="140dp"
            android:layout_height="135dp"
            app:picturePath="@{holder.student.picturePath}"
            app:gender="@{holder.student.gender}"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@color/colorPrimary"/>

        <EditText
            android:id="@+id/plain_content"
            android:layout_width="330dp"
            android:layout_height="130dp"
            android:layout_marginTop="8dp"
            android:editable="false"
            android:ems="10"
            android:enabled="false"
            android:inputType="textPersonName"
            android:text=""
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_person"/>

        <Button
            android:id="@+id/btn_attend"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/attend"
            android:textSize="21sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/grp_state"
            app:layout_constraintTop_toBottomOf="@+id/grp_state"/>

        <Button
            android:id="@+id/btn_denial"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:text="@string/decline"
            android:textSize="21sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_attend"
            app:layout_constraintTop_toBottomOf="@+id/grp_state"
            app:layout_constraintVertical_bias="0.542"/>

        <RadioGroup
            android:id="@+id/grp_state"
            android:layout_width="330dp"
            android:layout_height="70dp"
            android:layout_marginEnd="8dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@+id/plain_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="@+id/plain_content"
            app:layout_constraintTop_toBottomOf="@+id/plain_content">

            <RadioButton
                android:id="@+id/radio_healthy"
                android:layout_width="160dp"
                android:layout_height="70dp"
                android:checked="true"
                android:text="@string/condition_good"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="36sp"
                app:layout_constraintLeft_toRightOf="@+id/radio_unhealthy"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/plain_content"/>

            <RadioButton
                android:id="@+id/radio_unhealthy"
                android:layout_width="160dp"
                android:layout_height="70dp"
                android:checked="false"
                android:text="@string/condition_bad"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="36sp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/plain_content"/>

        </RadioGroup>
    </android.support.constraint.ConstraintLayout>
</layout>
